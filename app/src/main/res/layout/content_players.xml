<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="es.nitelmursoftware.musmanager.musmanager.gui.Player"
    >


    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.14">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageButton
                android:layout_width="120dp"
                android:layout_height="150dp"
                android:id="@+id/imageButton"
                android:layout_weight="0.14" />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="New Button"
                android:id="@+id/button1"
                android:layout_gravity="center_horizontal"
                android:layout_weight="0.14" />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="New Button"
                android:id="@+id/button2"
                android:layout_gravity="center_horizontal"
                android:layout_weight="0.14" />

        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Nombre"
                android:id="@+id/TVName"
                android:layout_weight="0.14"
                android:layout_column="0"
                android:layout_span="3" />
            <EditText
                android:inputType="textPersonName"
                android:text="Name"
                android:ems="10"
                android:id="@+id/ETName"
                android:layout_weight="0.14"
                android:layout_column="3" />
        </TableRow>


        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Alias"
                android:id="@+id/TVAlias"
                android:layout_weight="0.14"
                android:layout_column="0"
                android:layout_span="3" />
            <EditText
                android:id="@+id/ETAlias"
                android:layout_weight="0.14"
                android:text="Alias"
                android:layout_column="3" />
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Partidas"
                android:id="@+id/TVMatches"
                android:layout_weight="0.14"
                android:layout_column="0"
                android:layout_span="3" />
            <EditText
                android:id="@+id/ETMatches"
                android:layout_weight="0.14"
                android:text="Partidas"
                android:layout_column="3" />
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Juegos"
                android:id="@+id/TVGames"
                android:layout_weight="0.14"
                android:layout_column="0"
                android:layout_span="3" />
            <EditText
                android:id="@+id/ETGames"
                android:layout_weight="0.14"
                android:text="Juegos"
                android:layout_column="3" />
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Rachas"
                android:id="@+id/TVPeriods"
                android:layout_weight="0.14"
                android:layout_column="0"
                android:layout_span="3" />
            <EditText
                android:id="@+id/ETPeriods"
                android:layout_weight="0.14"
                android:text="Rachas"
                android:layout_column="3" />
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Pareja"
                android:id="@+id/TVMate"
                android:layout_weight="0.14"
                android:layout_column="0"
                android:layout_span="3" />
            <EditText
                android:id="@+id/ETMate"
                android:layout_weight="0.14"
                android:text="Pareja"
                android:layout_column="3" />
        </TableRow>
    </TableLayout>

</RelativeLayout>