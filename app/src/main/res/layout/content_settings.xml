<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.15">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_url"
                    android:layout_column="5"
                    android:layout_weight="0.05"
                    android:text="URL"
                    android:textAppearance="?android:attr/textAppearanceMedium" />

                <EditText
                    android:id="@+id/et_url"
                    android:layout_column="5"
                    android:layout_weight="0.20"
                    android:gravity="center_horizontal"
                    android:text="url"

                    android:textColor="#000000" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_user"
                    android:layout_column="5"
                    android:layout_weight="0.05"
                    android:text="Usuario"
                    android:textAppearance="?android:attr/textAppearanceMedium" />

                <EditText
                    android:id="@+id/et_user"
                    android:layout_column="5"
                    android:layout_weight="0.2"
                    android:gravity="center_horizontal"
                    android:text=""
                    android:textColor="#000000" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_password"
                    android:layout_column="5"
                    android:layout_weight="0.05"
                    android:text="Contraseña"
                    android:textAppearance="?android:attr/textAppearanceMedium" />

                <EditText
                    android:id="@+id/et_password"
                    android:layout_column="5"
                    android:layout_weight="0.2"
                    android:gravity="center_horizontal"
                    android:inputType="textPassword"
                    android:text=""
                    android:textColor="#000000" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_absoluto"
                    android:layout_column="5"
                    android:layout_weight="0.05"
                    android:text="Días Absoluto"
                    android:textAppearance="?android:attr/textAppearanceMedium" />

                <EditText
                    android:id="@+id/et_absoluto"
                    android:layout_column="5"
                    android:layout_weight="0.2"
                    android:gravity="center_horizontal"
                    android:text=""
                    android:textColor="#000000" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_parcial"
                    android:layout_column="5"
                    android:layout_weight="0.05"
                    android:text="Días Parcial"
                    android:textAppearance="?android:attr/textAppearanceMedium" />

                <EditText
                    android:id="@+id/et_parcial"
                    android:layout_column="5"
                    android:layout_weight="0.2"
                    android:gravity="center_horizontal"
                    android:text=""
                    android:textColor="#000000" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_porcentaje"
                    android:layout_column="5"
                    android:layout_weight="0.05"
                    android:text="% Mínimo"
                    android:textAppearance="?android:attr/textAppearanceMedium" />

                <EditText
                    android:id="@+id/et_porcentaje"
                    android:layout_column="5"
                    android:layout_weight="0.2"
                    android:gravity="center_horizontal"
                    android:text=""
                    android:textColor="#000000" />

            </TableRow>
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_porcentajedays"
                    android:layout_column="5"
                    android:layout_weight="0.05"
                    android:text="% Días Mínimo"
                    android:textAppearance="?android:attr/textAppearanceMedium" />

                <EditText
                    android:id="@+id/et_porcentajedays"
                    android:layout_column="5"
                    android:layout_weight="0.2"
                    android:gravity="center_horizontal"
                    android:text=""
                    android:textColor="#000000" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/bt_save"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="5"
                    android:layout_gravity="center_horizontal"
                    android:layout_weight="0.14"
                    android:text="Guardar
                    " />

            </TableRow>
        </TableLayout>
    </ScrollView>

</LinearLayout>