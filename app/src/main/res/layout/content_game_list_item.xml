<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffffff"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/iv_player11"
        android:layout_width="30dp"
        android:layout_height="40dp"
        android:src="@drawable/ic_launcher" />

    <ImageView
        android:id="@+id/iv_player12"
        android:layout_width="30dp"
        android:layout_height="40dp"
        android:layout_toRightOf="@+id/iv_player11"
        android:src="@drawable/ic_launcher" />

    <TextView
        android:id="@+id/tv_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/iv_player11"
        android:layout_centerHorizontal="true"
        android:gravity="top"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <ImageView
        android:id="@+id/iv_player21"
        android:layout_width="30dp"
        android:layout_height="40dp"
        android:layout_toLeftOf="@+id/iv_player22"
        android:src="@drawable/ic_launcher" />

    <ImageView
        android:id="@+id/iv_player22"
        android:layout_width="30dp"
        android:layout_height="40dp"
        android:layout_alignParentRight="true"
        android:src="@drawable/ic_launcher" />

    <TextView
        android:id="@+id/tv_result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/iv_player11"
        android:layout_centerHorizontal="true"
        android:gravity="bottom"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/tv_winner1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/iv_player12"
        android:background="#0f0"
        android:text="Winner"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/tv_winner2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/iv_player21"
        android:background="#0f0"
        android:text="Winner"
        android:textAppearance="?android:attr/textAppearanceMedium" />

</RelativeLayout>